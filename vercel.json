{
    "version": 2,
    "builds": [
      {
        "src": "server/app.py",
        "use": "@vercel/python"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/client/dist/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/server/app.py"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/client/dist/assets/$1"
      }
    ]
  }
  